<%= erb :_navbar %>
<br><br><center>
<div class='container'>
  <h1 class="survey_title"><%= @survey.name %></h1>
  <br>
  <% @question.each do |q| %>
    <h3 class="survey_question"><%= q.text %></h3>
    <form action=<%="/surveys/#{@survey.id}/responses"%> method="post">
    <% q.choices.each do |c| %>
      <input type="radio" name="question[<%= "#{q.id}" %>]" value="<%= "#{c.id}" %>"><%= c.text %><br>
    <% end %>
    <br>
  <% end %>
  <input type="submit" value="submit survey responses"> 
  </form>
</div>

